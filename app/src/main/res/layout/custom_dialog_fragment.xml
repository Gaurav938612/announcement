<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/above_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select For Notification"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_margin="20dp"
            android:textColor="@color/colorBlack"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_below="@+id/above_id"/>
        <RelativeLayout
            android:id="@+id/bottom_relative_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/recyclerViewID">
            <Button
                android:id="@+id/saveId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="SAVE"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="saveSubscribed"/>
            <Button
                android:id="@+id/cancelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="CANCEL"
                android:layout_alignRight="@+id/saveId"
                android:layout_marginRight="80dp"
                android:background="@color/colorWhite"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="cancelDialog"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/bottom_relative_id"/>
    </RelativeLayout>
</layout>